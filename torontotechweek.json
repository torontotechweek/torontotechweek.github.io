{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
	"glyphs": "https://torontotechweek.github.io/assets/fonts/{fontstack}/{range}.pbf",
	"sprite": "https://torontotechweek.github.io/assets/sprites/sprites",
	"sources": {
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(0, 0%, 99%)"
			}
		},
		{
			"id": "site-parking",
			"type": "fill",
			"source": "osm",
			"source-layer": "sites",
			"minzoom": 15,
			"filter": ["in", "kind", "parking"],
			"paint": {
			  "fill-color": "hsl(0, 0%, 97%)",
			  "fill-opacity": 1
			}
		},
		{
			"source": "osm",
			"id": "water",
			"type": "fill",
			"source-layer": "water_polygons",
			"filter": [ "in", "kind", "water", "river", "reservoir", "basin", "dock" ],
			"paint": {
				"fill-color": "hsl(200, 100%, 90%)"
			}
		},
		{
			"source": "osm",
			"id": "waterway",
			"type": "line",
			"source-layer": "water_lines",
			"filter": [ "all", [ "in", "kind", "river" ], [ "!=", "tunnel", true ], [ "!=", "bridge", true ] ],
			"paint": {
				"line-color": "hsl(200, 100%, 90%)",
				"line-width": 1,
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "building",
			"type": "fill",
			"source-layer": "buildings",
			"paint": {
				"fill-color": "hsl(25, 20%, 95%)",
				"fill-opacity": { "stops": [ [ 14, 0 ], [ 15, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "building-wall",
			"type": "line",
			"source-layer": "buildings",
			"paint": {
				"line-color": "hsl(25, 20%, 85%)",
				"line-offset": { "stops": [ [ 15, 1 ], [ 20, 3 ] ] },
				"line-width": { "stops": [ [ 15, 0.5 ], [ 20, 1 ] ] },
				"line-opacity": { "stops": [ [ 15, 0 ], [ 15.5, 1 ] ] }
			},
			"layout": {
				"line-join": "miter",
				"line-cap": "butt"
			}
		},
		{
			"source": "osm",
			"id": "building-buffer",
			"type": "line",
			"source-layer": "buildings",
			"paint": {
				"line-color": "hsl(0, 0%, 99%)",
				"line-width": { "stops": [ [ 15, 1 ], [ 20, 5 ] ] },
				"line-opacity": { "stops": [ [ 14, 0 ], [ 15, 1 ] ] }
			}
		},
		{
			"id": "ferry",
			"type": "line",
			"source": "osm",
			"source-layer": "ferries",
			"paint": {
			  "line-color": "hsl(200, 100%, 70%)",
			  "line-dasharray": [2, 2],
			  "line-width": 1
			}
		},	  
		{
			"source": "osm",
			"id": "airport-taxiway",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "taxiway" ],
			"paint": {
				"line-color": "hsl(214, 23%, 95%)",
				"line-width": { "stops": [ [ 13, 0 ], [ 14, 1 ], [ 15, 8 ], [ 16, 12 ], [ 18, 18 ], [ 20, 36 ] ] },
				"line-opacity": { "stops": [ [ 13, 0 ], [ 14, 1 ] ] }
			},
			"layout": {
				"line-join": "round"
			}
		},
		{
			"source": "osm",
			"id": "airport-area",
			"type": "fill",
			"source-layer": "street_polygons",
			"filter": [ "in", "kind", "runway", "taxiway" ],
			"paint": {
				"fill-color": "hsl(214, 23%, 95%)",
				"fill-opacity": { "stops": [ [ 11, 0 ], [ 12, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "highway-minor-buffer",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "==", "kind", "residential" ],
			"paint": {
				"line-color": "hsl(0, 0%, 99%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 13, 20, 106 ],
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-major-buffer",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(0, 0%, 99%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 15, 20, 166 ],
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "osm",
			"id": "highway-service-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "service" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(214, 33%, 85%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 32 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "butt"
			},
			"minzoom": 16
		},
		{
			"source": "osm",
			"id": "highway-minor-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "residential" ],
			"paint": {
				"line-color": "hsl(214, 33%, 85%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 3, 20, 96 ],
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-major-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(214, 33%, 85%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 5, 20, 156 ],
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			},
			"layout": {
				"line-join": "round",
